<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#D6D6D6">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#D6D6D6" />
            <corners
                android:bottomLeftRadius="@dimen/_10sdp"
                android:bottomRightRadius="@dimen/_1sdp"
                android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_1sdp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="#4B5FD1"
                android:startColor="#7A92EA"
                android:type="linear" />
            <corners
                android:bottomLeftRadius="@dimen/_10sdp"
                android:bottomRightRadius="@dimen/_1sdp"
                android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_1sdp" />
        </shape>
    </item>
</ripple>